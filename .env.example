# Core
APP_PORT=8000
DOCKER_NETWORK="aceserver"
MIN_REPLICAS=10
MAX_REPLICAS=50
CONTAINER_LABEL=orchestrator.managed=acestream
STARTUP_TIMEOUT_S=25
IDLE_TTL_S=600

# Stats collector
COLLECT_INTERVAL_S=5
STATS_HISTORY_MAX=720

# Docker monitoring
MONITOR_INTERVAL_S=3
AUTOSCALE_INTERVAL_S=5

# Dynamic ports
PORT_RANGE_HOST=19000-19999
ACE_HTTP_RANGE=40000-44999
ACE_HTTPS_RANGE=45000-49999
ACE_MAP_HTTPS=false

# Security
API_KEY=defaultpassword

# Persistence
DB_URL=sqlite:///./orchestrator.db

# Auto-delete container when stream ends
AUTO_DELETE=true

# Gluetun Integration
#GLUETUN_CONTAINER_NAME=gluetun
#GLUETUN_HEALTH_CHECK_INTERVAL_S=3
#VPN_RESTART_ENGINES_ON_RECONNECT=true
#GLUETUN_API_PORT=8001
#GLUETUN_PORT_CACHE_TTL_S=60
#VPN_MODE=

# Engine provisioning rate limiting  
MAX_CONCURRENT_PROVISIONS=10
MIN_PROVISION_INTERVAL_S=0.5
MAX_ACTIVE_REPLICAS=20

# Other
TZ=Europe/Madrid
ENGINE_VARIANT=krinkuto11-amd64

# Debug Mode
DEBUG_MODE=false
DEBUG_LOG_DIR=/debug_logs
